#include <ccc/cc_runtime.cch>
#include <ccc/std/task.cch>

@async int id(int v) {
    return v;
}

@async int sum_to(int n) {
    int s = 0;
    for (int i = 0; i < n; i++) {
        s += await id(i);
    }
    return s;
}

int main(void) {
    CCTaskIntptr t = sum_to(5); /* 0+1+2+3+4 = 10 */
    intptr_t r = cc_block_on_intptr(t);
    return (r == 10) ? 0 : 1;
}
