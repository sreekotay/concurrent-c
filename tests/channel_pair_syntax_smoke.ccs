#include <ccc/cc_runtime.cch>

int main(void) {
    int[~3 >] tx;
    int[~3 <] rx;
    CCChan* ch = channel_pair(&tx, &rx);

    int v = 42;
    int out = 0;
    if (chan_send(tx, v) != 0) return 1;
    if (chan_recv(rx, &out) != 0) return 2;
    chan_close(tx);
    cc_chan_free(ch);
    return (out == 42) ? 0 : 3;
}

