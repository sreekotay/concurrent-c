#include <ccc/cc_runtime.cch>
#include <ccc/cc_closure.cch>
#include <pthread.h>
#include <ccc/std/task_intptr.cch>

static pthread_t g_tid;

static void mark_tid(void) { g_tid = pthread_self(); }

static int add1_checked(int x) {
    return pthread_equal(g_tid, pthread_self()) ? (x + 1) : -999;
}

@async int f(int x) {
    int y = 0;
    mark_tid();
    y = add1_checked(x);
    return y;
}

int main(void) {
    intptr_t r = cc_block_on(intptr_t, f(1));
    return (r == 2) ? 0 : 1;
}

