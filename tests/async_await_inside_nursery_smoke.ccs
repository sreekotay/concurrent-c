#include <ccc/cc_runtime.cch>
#include <ccc/cc_closure.cch>
#include <ccc/std/task_intptr.cch>

int g = 0;

@async int noop(int v) { return v; }

@async int f(void) {
    g = 0;
    @nursery {
        int x = await noop(7);
        g = x;
        spawn(() => { g = g + 1; });
    }
    return g;
}

int main(void) {
    CCTaskIntptr t = f();
    intptr_t r = cc_block_on_intptr(t);
    return (r == 8) ? 0 : 1;
}

