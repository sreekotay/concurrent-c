#include <ccc/std/prelude.cch>
#include <assert.h>

int main(void) {
    int[~1 >, DropOld] tx;
    int[~1 <, DropOld] rx;
    channel_pair(&tx, &rx);

    // Fill then overwrite
    assert(cc_io_avail(chan_send(tx, 1)));
    assert(cc_io_avail(chan_send(tx, 2)));

    int v = 0;
    assert(cc_io_avail(chan_recv(rx, &v)));
    assert(v == 2);

    chan_close(tx);
    chan_free(rx);
    return 0;
}
