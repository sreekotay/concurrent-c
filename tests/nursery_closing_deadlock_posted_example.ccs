#include "cc_runtime.cch"
#include "cc_channel.cch"

#include <stdio.h>

static volatile int received_sum = 0;

int main(void) {
    CCChan* ch = cc_chan_create(1);
    if (!ch) return 2;
    (void)cc_chan_init_elem(ch, sizeof(int));

    @nursery closing(ch) {
        /* Producer: sends values 1, 2, 3 then exits. */
        spawn(() => {
            for (int i = 1; i <= 3; i++) {
                cc_chan_send(ch, &i, sizeof(i));
                printf("sent %d\n", i);
            }
            /* Producer exits; channel stays open for consumer. */
        });

        /* Consumer: receives until channel closes. */
        spawn(() => {
            int v;
            while (cc_chan_recv(ch, &v, sizeof(v)) == 0) {
                printf("got %d\n", v);
                received_sum += v;
            }
        });
    }

    cc_chan_free(ch);
    printf("sum = %d\n", (int)received_sum);
    return 0;
}

